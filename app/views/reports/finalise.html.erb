<div class="admin">
<h1>Finalise Orders</h1>

<% @orders.each do |order| %>
    <div class='row'>
        <% user = User.find order.user_id  %>
        <div class='col-md-1'></div>
        <div class='col-md-2'>Name: <%= user.name %></div>
        <div class='col-md-2'>Shipped Date: <%= order.payment_date %></div>
        <div class='col-md-2'>Shipping Identification: <%= order.shipping_id %></div>
        <div class='col-md-2'><%= link_to(button_tag("View Order"), order_path(order.id)) %></div>
        <div class='col-md-2'><%= form_for(order) do |f| %>
            <%= f.hidden_field :finalised_date, :value => DateTime.now %>
            <%= f.submit "Mark as Finalised" %>
        <% end %></div>
        <div class='col-lg-1'></div>
    </div>
    <hr>
    <br>
<% end %>
</div>
