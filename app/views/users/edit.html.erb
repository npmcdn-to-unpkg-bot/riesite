
<div class="main">

<h1>EDIT USER</h1>
  <%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %><br>

  <%= f.label :username %>
  <%= f.text_field :username, :required => true %><br>

  <%= f.label :password %>
  <%= f.password_field :password, :required => true %><br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, :required => true %><br>

  <%= f.label :image%>
  <%= f.url_field :image %><br><br>

  <%= f.submit %><br><br>
<% end %>
</div>
